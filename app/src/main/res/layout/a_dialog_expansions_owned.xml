<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_screen_bg"
              android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/expansions_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/expansions_owned"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textScaleX="1.2"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/dunwich_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:text="@string/dunwich_campaign"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"/>

    <CheckBox
        android:id="@+id/carcosa_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:text="@string/carcosa_campaign"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"/>

    <CheckBox
        android:id="@+id/forgotten_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:text="@string/forgotten_campaign"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"/>

    <CheckBox
        android:id="@+id/circle_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:text="@string/circle_campaign"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"/>

    <CheckBox
        android:id="@+id/dream_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:text="@string/dream_campaign"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"/>

    <CheckBox
        android:id="@+id/norman_xpac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:text="@string/norman_withers"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"/>

    <CheckBox
        android:id="@+id/silas_xpac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/checkbox_style"
        android:paddingBottom="@dimen/checkbox_padding"
        android:paddingTop="@dimen/checkbox_padding"
        android:text="@string/silas_marsh"
        android:textColor="@android:color/black"
        android:textSize="@dimen/arnopro_textsize"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingLeft="-16dp"
        android:paddingRight="-16dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_style"
            android:includeFontPadding="false"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textScaleX="1.2"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/okay_button"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_style"
            android:includeFontPadding="false"
            android:text="@string/okay"
            android:textColor="@android:color/black"
            android:textScaleX="1.2"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>